.leftRightButton
	position absolute
	bottom 10px
	right 10px
	background-color rgba(255, 255, 255, 0.6)
	width 200px
	height 50px
	color #4d6e6c
	padding 5px
	border-radius 3px
	border: 1px solid #ffffff

.leftRightButton:before
	content "\e094"
	position absolute
	top 0
	left 0
	font-size 1.5em
	line-height 50px

.leftRightButton:after
	content "\e095"
	position absolute
	top 0
	right 0
	font-size 1.5em
	line-height 50px

.TopBottomButton
	position absolute
	bottom 10px
	left 10px
	background-color #ffffff
	width 50px
	height 200px